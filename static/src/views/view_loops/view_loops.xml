<div t-name="ViewLoops">
    <div id="body">
        <div class="container">

            <h1 class="mt-3">Loops: t-foreach e t-out</h1>

            <!-- PRESENTAZIONE -->
            <div class="mt-5">
                <t t-set="list" t-value="[4, 2, 7, 1, 5, 8, 1 ,4 , 2, 7, 1, 5, 8, 7, 8, 2 ,4 , 2, 7, 1, 5, 8]"/>
                <ul>
                    <li><strong>t-set</strong>="list" <strong>t-value</strong>="[4, 2, 7, 1, 5, 8, 1 ,4 , 2, 7, 1, 5, 8, 7, 8, 2 ,4 , 2, 7, 1, 5, 8]"
                    </li>
                    <li><strong>t-foreach</strong>="list" <strong>t-as</strong>="i" <strong>t-out</strong>="i"
                    </li>
                    <li><strong>Deprecati:</strong>i_even, i_odd, i_parity
                    </li>
                    <li><strong>i_size:</strong>the size of the collection if it is available
                    </li>
                </ul>
            </div>

            <!-- TABELLA - FOREACH -->
            <table class="table table-bordered table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th t-foreach="list" t-as="i" t-out="i_index + 's'"/>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>
                            <div>t-out="i"</div>
                            <div>t-out="i_value</div>
                        </th>
                        <td t-foreach="list" t-as="i" style="vertical-align: middle;">
                            <div t-out="i"/>
                        </td>
                    </tr>
                    <tr>
                        <th>t-out="i_index"</th>
                        <td t-foreach="list" t-as="i" t-out="i_index"/>
                    </tr>
                    <tr>
                        <th>t-out="i_first"</th>
                        <td t-foreach="list" t-as="i" t-out="i_first" t-att-style="i_first ? 'background-color: #00FF00' : ''"/>
                    </tr>
                    <tr>
                        <th>t-out="i_last"</th>
                        <t t-set="condition" t-value="True"/>
                        <td t-foreach="list" t-as="i" t-out="i_last" t-att-style="i_last ? 'background-color: #00FF00' : ''"/>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</t>
